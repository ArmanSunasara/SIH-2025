{
    "name": "backend-tests",
    "testEnvironment": "node",
    "testMatch": [
        "**/__tests__/**/*.(js|ts)",
        "**/*.(test|spec).(js|ts)"
    ],
    "collectCoverageFrom": [
        "**/*.js",
        "!**/node_modules/**",
        "!**/coverage/**",
        "!jest.config.js",
        "!server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 70,
            "functions": 70,
            "lines": 70,
            "statements": 70
        }
    },
    "setupFilesAfterEnv": [
        "<rootDir>/tests/setup.js"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
}